# ==========================================================
# CORE CONFIGURATION
# ==========================================================

# Application mode: development, testing, production
APP_MODE=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ==========================================================
# API CREDENTIALS
# ==========================================================

# Coinglass API credentials
COINGLASS_API_KEY=your_coinglass_api_key_here
COINGLASS_API_BASE_URL=https://open-api.coinglass.com/api/v3

# CCXT exchange API credentials
EXCHANGE_API_KEY=your_exchange_api_key_here
EXCHANGE_API_SECRET=your_exchange_api_secret_here

# ==========================================================
# DATA COLLECTION
# ==========================================================

# Default timeframe for data collection
DEFAULT_TIMEFRAME=4h

# Data storage directory
DATA_DIR=data

# Historical data fetch settings
HISTORICAL_DATA_START_DATE=2023-01-01
HISTORICAL_DATA_END_DATE=2023-12-31

# ==========================================================
# MODEL CONFIGURATION
# ==========================================================

# Model weights directory
MODEL_WEIGHTS_DIR=data/weights

# Default window size for analysis
DEFAULT_WINDOW_SIZE=60

# Default lookahead candles for backtesting
DEFAULT_LOOKAHEAD_CANDLES=10

# Default minimum absolute score for signal generation
DEFAULT_MIN_ABS_SCORE=0.425

# ==========================================================
# MEMORY MANAGEMENT
# ==========================================================

# Memory threshold percentage for adaptive batch processing
MEMORY_THRESHOLD_PERCENT=80

# Initial batch size for data processing
INITIAL_BATCH_SIZE=100

# Minimum batch size for data processing
MIN_BATCH_SIZE=10

# Maximum batch size for data processing
MAX_BATCH_SIZE=1000

# Garbage collection frequency (number of operations between GC calls)
GC_FREQUENCY=5

# Memory check interval in seconds
MEMORY_CHECK_INTERVAL_SECONDS=60

# Enable memory monitoring
ENABLE_MEMORY_MONITORING=true

# ==========================================================
# WEB APPLICATION
# ==========================================================

# Web app port
WEB_APP_PORT=8501

# Web app host
WEB_APP_HOST=localhost

# Web app title
WEB_APP_TITLE=Trading Algorithm Dashboard

# ==========================================================
# NOTIFICATION SETTINGS
# ==========================================================

# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=false

# SMTP settings for email notifications
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_username
SMTP_PASSWORD=your_password
NOTIFICATION_EMAIL_FROM=alerts@example.com
NOTIFICATION_EMAIL_TO=your_email@example.com
